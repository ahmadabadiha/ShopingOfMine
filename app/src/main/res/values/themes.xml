<resources>
    <!-- Base application theme. -->
    <style name="Theme.ShopingOfMine" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/red</item>
        <item name="end_item_background">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>


    </style>

    <style name="buttonStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground_cart</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>


        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.ShopingOfMine</item>
    </style>

    <style name="My_Tooltip" parent="@style/Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/red</item>

    </style>

    <style name="Myslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemTextAppearanceInactive">?attr/textAppearanceLabelSmall</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceLabelSmall</item>
        <item name="itemPaddingTop">4dp</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
    </style>

    <style name="backgroundDark">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:layoutDirection">rtl</item>
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>